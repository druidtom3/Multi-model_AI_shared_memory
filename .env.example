# AI API金鑰設定
# 請複製此檔案為 .env 並填入實際的API金鑰

# OpenAI API 金鑰
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API 金鑰  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# xAI Grok API 金鑰
XAI_API_KEY=your_xai_api_key_here

# Google AI API 金鑰
GOOGLE_AI_KEY=your_google_ai_api_key_here

# 平台預設設定
DEFAULT_AI_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022
DEFAULT_ROLE=system_architect
DEFAULT_TEMPERATURE=0.7

# 專案路徑設定
PROJECT_WORKSPACE=./workspace
EVENT_LOG_PATH=./data/project_events.json
CONFIGS_PATH=./configs

# Linus原則執行設定
ENFORCE_LINUS_PRINCIPLES=true
AUTO_COMPLIANCE_CHECK=true
LINUS_VIOLATION_SEVERITY=medium

# Web界面設定
WEB_HOST=127.0.0.1
WEB_PORT=5000
WEB_DEBUG=true

# 安全性設定
SESSION_SECRET_KEY=your_session_secret_key_here
ENABLE_API_KEY_VALIDATION=true

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE_PATH=./data/ai_coordinator.log
ENABLE_FILE_LOGGING=true

# API請求設定
API_TIMEOUT=60
MAX_RETRIES=3
RETRY_DELAY=1.0

# 快取設定
ENABLE_EVENT_CACHE=true
CACHE_TIMEOUT=30

# 檔案監控設定
ENABLE_FILE_MONITORING=true
MONITOR_EXTENSIONS=.py,.js,.ts,.html,.css,.md,.yaml,.json

# 備份設定
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=24